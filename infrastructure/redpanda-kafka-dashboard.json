{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus"
    }
  ],
  "editable": true,
  "graphTooltip": 1,
  "panels": [

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "panels": [],
      "title": "üìä Cluster Overview",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 1,
      "title": "Total Topics",
      "type": "stat",
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "expr": "count(count by (redpanda_topic) (redpanda_kafka_request_bytes_total))", "legendFormat": "Topics" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 2,
      "title": "Total Partitions",
      "type": "stat",
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "expr": "count(redpanda_kafka_partition_committed_offset)", "legendFormat": "Partitions" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5242880 },
              { "color": "red", "value": 10485760 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 3,
      "title": "Bytes In/sec",
      "type": "stat",
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "expr": "sum(rate(redpanda_kafka_request_bytes_total[1m]))", "legendFormat": "In" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 2000 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "id": 4,
      "title": "Messages Produced/sec",
      "type": "stat",
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "expr": "sum(rate(redpanda_kafka_request_produce_latency_seconds_count[1m]))", "legendFormat": "msg/sec" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "id": 5,
      "title": "Active Connections",
      "type": "stat",
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "expr": "redpanda_rpc_active_connections", "legendFormat": "Connections" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "id": 6,
      "title": "Request Errors/sec",
      "type": "stat",
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "expr": "sum(rate(redpanda_kafka_request_errors_total[1m]))", "legendFormat": "Errors" }
      ]
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "panels": [],
      "title": "üì® Topic Throughput ‚Äî bmb.request.*",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 10,
      "title": "Topic Offset Growth (messages produced)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(redpanda_kafka_partition_committed_offset{redpanda_topic=\"bmb.request.new\"}[5m]))",
          "legendFormat": "bmb.request.new"
        },
        {
          "expr": "sum(rate(redpanda_kafka_partition_committed_offset{redpanda_topic=\"bmb.request.response\"}[5m]))",
          "legendFormat": "bmb.request.response"
        },
        {
          "expr": "sum(rate(redpanda_kafka_partition_committed_offset{redpanda_topic=\"bmb.request.callback\"}[5m]))",
          "legendFormat": "bmb.request.callback"
        },
        {
          "expr": "sum(rate(redpanda_kafka_partition_committed_offset{redpanda_topic=\"bmb.request.dlq\"}[5m]))",
          "legendFormat": "bmb.request.dlq"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "bars", "fillOpacity": 70, "lineWidth": 1, "stacking": { "mode": "normal" } },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 11,
      "title": "Topic Message Count (total per partition)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (redpanda_topic) (redpanda_kafka_partition_committed_offset{redpanda_topic=~\"bmb.request.*\"})",
          "legendFormat": "{{ redpanda_topic }}"
        }
      ]
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102,
      "panels": [],
      "title": "üìä Consumer Group Lag",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 25, "lineWidth": 2 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "id": 20,
      "title": "Consumer Group Lag by Topic",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (redpanda_topic) (redpanda_kafka_consumer_group_lag_offsets{redpanda_group=\"gateway-service-group\", redpanda_topic=~\"bmb.request.*\"})",
          "legendFormat": "{{ redpanda_topic }}"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 21,
      "title": "Consumer Group Lag by Partition (request.new)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "redpanda_kafka_consumer_group_lag_offsets{redpanda_group=\"gateway-service-group\", redpanda_topic=\"bmb.request.new\"}",
          "legendFormat": "partition-{{ redpanda_partition }}"
        }
      ]
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103,
      "panels": [],
      "title": "‚è±Ô∏è Kafka Latency",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 15, "lineWidth": 2 },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 30,
      "title": "Produce Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(redpanda_kafka_request_produce_latency_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(redpanda_kafka_request_produce_latency_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(redpanda_kafka_request_produce_latency_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 15, "lineWidth": 2 },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "id": 31,
      "title": "Fetch Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(redpanda_kafka_request_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(redpanda_kafka_request_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(redpanda_kafka_request_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ]
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 32 },
      "id": 104,
      "panels": [],
      "title": "üíæ Storage & Resources",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2 },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 33 },
      "id": 40,
      "title": "Storage Size by Topic",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (redpanda_topic) (redpanda_kafka_partition_log_size_bytes{redpanda_topic=~\"bmb.request.*\"})",
          "legendFormat": "{{ redpanda_topic }}"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 15, "lineWidth": 2 },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 33 },
      "id": 41,
      "title": "RedPanda Memory Usage",
      "type": "timeseries",
      "targets": [
        { "expr": "redpanda_memory_allocated_memory", "legendFormat": "Allocated" },
        { "expr": "redpanda_memory_free_memory", "legendFormat": "Free" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 15, "lineWidth": 2 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 33 },
      "id": 42,
      "title": "Kafka Request Errors",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (redpanda_request) (rate(redpanda_kafka_request_errors_total[5m]))",
          "legendFormat": "{{ redpanda_request }}"
        }
      ]
    }
  ],

  "refresh": "10s",
  "schemaVersion": 39,
  "tags": ["kafka", "redpanda", "gateway", "monitoring"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "RedPanda/Kafka Monitoring ‚Äî Request Gateway Service",
  "uid": "redpanda-gateway-monitoring",
  "version": 1
}