# ============================================================
# REQUEST GATEWAY SERVICE â€” Environment Variables (EXAMPLE)
# ============================================================
# NOTE: Spring Boot does NOT read this file by default!
# This is documentation only.
#
# FOR DEVELOPMENT:
#   Use application-dev.yml (no env vars needed)
#   Run: java -jar gateway.jar --spring.profiles.active=dev
#
# FOR PRODUCTION:
#   Set these as OS environment variables
#   Run: java -jar gateway.jar --spring.profiles.active=prod
# ============================================================

# --- Spring Profile ---
SPRING_PROFILE=prod

# --- Server ---
SERVER_PORT=8090
MANAGEMENT_PORT=8091

# ============================================================
# DATA SOURCE (Oracle/Biruni or other)
# ============================================================
SOURCE_BASE_URL=http://your-server:8080/application
SOURCE_USERNAME=admin
SOURCE_PASSWORD=secure_password
SOURCE_PULL_URI=/api/requests/pull
SOURCE_SAVE_URI=/api/requests/save
SOURCE_TIMEOUT=60

# ============================================================
# KAFKA
# ============================================================
KAFKA_BOOTSTRAP_SERVERS=kafka-server:9092
KAFKA_GROUP_ID=gateway-service-group
KAFKA_TOPIC_REQUEST=gateway.request.new
KAFKA_TOPIC_RESPONSE=gateway.request.response
KAFKA_TOPIC_DLQ=gateway.request.dlq
KAFKA_PARTITIONS=10

# ============================================================
# REDIS
# ============================================================
REDIS_HOST=redis-server
REDIS_PORT=6379

# ============================================================
# POLLING
# ============================================================
POLLING_ENABLED=true
POLLING_INTERVAL_MS=5000
POLLING_BATCH_SIZE=100

# ============================================================
# HTTP CLIENT
# ============================================================
HTTP_CONNECT_TIMEOUT=10000
HTTP_READ_TIMEOUT=30000
HTTP_WRITE_TIMEOUT=30000

# ============================================================
# RETRY
# ============================================================
RETRY_MAX_ATTEMPTS=3
RETRY_INTERVAL_MS=3000
RETRY_STATUSES=408,429,500,502,503,504

# ============================================================
# DYNAMIC CONCURRENCY
# ============================================================
CONCURRENCY_MIN=10
CONCURRENCY_MAX=15
CONCURRENCY_MONITOR_INTERVAL=10000
CONCURRENCY_SCALE_UP=50
CONCURRENCY_SCALE_DOWN=10
CONCURRENCY_SCALE_STEP=2
CONCURRENCY_COOLDOWN=30000

# ============================================================
# OAUTH2 PROVIDERS
# ============================================================
OAUTH2_SMARTUP_TYPE=biruni
OAUTH2_SMARTUP_TOKEN_URL=http://your-server:8080/oauth/token
OAUTH2_SMARTUP_CLIENT_ID=your-client-id
OAUTH2_SMARTUP_CLIENT_SECRET=your-client-secret
OAUTH2_SMARTUP_SCOPE=read+write

# ============================================================
# TELEGRAM NOTIFICATIONS
# ============================================================
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=-1001234567890
TELEGRAM_MESSAGE_THREAD_ID=12345